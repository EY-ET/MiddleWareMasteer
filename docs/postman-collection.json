          "if (pm.response.code === 202) {",
          "  try {",
          "    const response = pm.response.json();",
          "    if (response.job_id) {",
          "      pm.collectionVariables.set('job_id', response.job_id);",
          "      console.log('Job ID saved:', response.job_id);",
          "    }",
          "  } catch (e) {",
          "    console.log('Could not extract job_id:', e.message);",
          "  }",
          "}",
          "",
          "// Auto-extract job_id from sync responses with job reference",
          "if (pm.response.code === 200) {",
          "  try {",
          "    const response = pm.response.json();",
          "    if (response.job_id) {",
          "      pm.collectionVariables.set('job_id', response.job_id);",
          "      console.log('Job ID saved from sync response:', response.job_id);",
          "    }",
          "  } catch (e) {",
          "    // Ignore if no job_id in sync response",
          "  }",
          "}",
          "",
          "// Log response time",
          "console.log('Response time:', pm.response.responseTime + 'ms');",
          "",
          "// Log rate limit headers if present",
          "const rateLimitRemaining = pm.response.headers.get('X-RateLimit-Remaining');",
