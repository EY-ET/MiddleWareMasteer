# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# TikTok API Configuration
TIKTOK_CLIENT_ID=your_client_id_here
TIKTOK_CLIENT_SECRET=your_client_secret_here
TIKTOK_REDIRECT_URI=https://your-domain.com/auth/callback
TIKTOK_APP_ID=your_app_id_here
TIKTOK_API_BASE_URL=https://open-api.tiktok.com

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_API_KEY=your-admin-api-key-here
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (for Docker deployment)
DATABASE_URL=postgresql://username:password@localhost:5432/tiktok_middleware
POSTGRES_USER=your-postgres-username
POSTGRES_PASSWORD=your-secure-postgres-password
REDIS_PASSWORD=your-secure-redis-password

# Trust proxy (automatically enabled in production)
TRUST_PROXY=true

# File Upload Configuration
MAX_FILE_SIZE_MB=60
MAX_FILES_PER_REQUEST=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp

# CORS Configuration
CORS_ORIGINS=http://localhost:5678,https://your-n8n-instance.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Job Configuration
JOB_TIMEOUT_MS=300000
CLEANUP_JOBS_AFTER_HOURS=24